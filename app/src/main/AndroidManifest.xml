<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_circle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/plane"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jurni"
        tools:targetApi="31">

        <!-- MainActivity: App Entry Point -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity (NO intent-filter) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.trips.AddFutureTripActivity"
            android:exported="true"
            android:label="Add Future Trip"/>

        <activity android:name=".ui.trips.TripDetailsActivity"
            android:exported="true"/>
        <activity android:name=".ui.trips.EditTripActivity"/>
    </application>
</manifest>
