<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Greeting -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, [User Name] ðŸ‘‹"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ready_adventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready for your next adventure?"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Closest Trip Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_closest_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closest Trip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ready_adventure"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CardView for Closest Trip -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_closest_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_closest_trip_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_closest_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No upcoming trips"
                android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Recently Added Trip Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_recent_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Added Trip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_closest_trip"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CardView for Recently Added Trip -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_recent_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_trip_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_recent_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No recently added trips"
                android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
